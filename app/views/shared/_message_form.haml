= form_for @relationship.messages.build(:relationship_id => @relationship.id) do |f|
	= render 'shared/error_messages', :object => f.object
	= f.hidden_field :relationship_id
	.field
		= f.label :urgency
		%br
		= f.radio_button :urgency, :id => "urgency1_field"
		= f.radio_button :urgency, :id => "urgency2_field"
		= f.radio_button :urgency, :id => "urgency3_field"
		= f.radio_button :urgency, :id => "urgency4_field"
	.field
		= f.label :content
		%br
		= f.text_field :content
	.actions
		= f.submit "Send Message"