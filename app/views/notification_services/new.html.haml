- if @notification_service
	= form_for @notification_service do |f|
		= f.hidden_field :user_id
		= f.hidden_field :type
		= f.label :username
		= f.text_field :username
		= f.submit 'Add Service'
- else
	= form_for( new_user_notification_service_path(current_user), :method => :get ) do |f|
		= f.select( :type, %w[EmailService NotifoService], {})
		= f.submit 'Select Type'
		