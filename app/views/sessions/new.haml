%h1 Sign in

= form_for(:session, :url => sessions_path) do |f|
	.field
		= f.label :email
		%br
		= f.text_field :email
	.field
		= f.label :password
		= link_to '??', recover_users_path, :class => "recover"
		%br
		= f.password_field :password
	.actions
		= f.submit "Sign in"
= set_focus_to_id 'session_email'
%div 
	New user? 
	= link_to "Sign up now!", signup_path
